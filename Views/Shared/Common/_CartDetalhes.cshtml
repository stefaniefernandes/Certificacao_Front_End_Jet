                            <div class="visible content">Carrinho</div>
                            <div class="hidden content">
                                <i class="cart icon"></i>
                            </div>
                        </a>
                    </div>
                    <div class="column">
                        <a type="submit" class="ui animated button fluid large submit action" tabindex="0" href="@(Session["UserAuthenticated"] == null ? "/checkout/Identification" : "/checkout/Payment")" >
